@{
    ViewData["Title"] = "About Us - ALDA TRAVELED LIMITED";
}

<!-- Hero Section -->
<section class="hero-gradient text-white py-20 md:py-32">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl text-gray-300 lg:text-7xl font-montserrat font-bold mb-6 animate-fade-in">
                Charting New Horizons,<br>
                <span class="text-alda-gold">Empowering Your Journey</span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-300 mb-8 animate-fade-in delay-100">A Global Travel & Educational Consultancy</p>
        </div>
    </div>
</section>

<!-- Introduction Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl md:text-4xl font-montserrat font-bold text-alda-dark mb-8">Welcome to ALDA TRAVELED LTD</h2>
            <p class="text-lg text-gray-600 mb-10 leading-relaxed text-justify">
                At ALDA TRAVELED LIMITED, we are a global travel and educational consultant passionate about transforming possibilities into realities by connecting individuals to global opportunities through expert guidance in travel and education consultancy. With offices in Nigeria and the UK, we empower clients to study abroad, travel for growth, or settle in new destinations, ensuring a seamless and impactful journey.
            </p>
        </div>
    </div>
</section>

<!-- Vision & Mission Section -->
<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
            <div class="bg-white p-10 rounded-2xl shadow-lg border-t-4 border-alda-gold">
                <div class="w-16 h-16 bg-alda-gold/10 rounded-full flex items-center justify-center mb-6 text-alda-gold">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                </div>
                <h3 class="text-3xl font-montserrat font-bold text-alda-dark mb-6 tracking-tight uppercase">Our Vision</h3>
                <p class="text-gray-600 text-lg leading-relaxed">
                    To redefine global travel and education consultancy by seamlessly connecting people with opportunities, enabling them to explore, learn, and thrive with confidence and ease.
                </p>
            </div>
            <div class="bg-white p-10 rounded-2xl shadow-lg border-t-4 border-alda-gold">
                <div class="w-16 h-16 bg-alda-gold/10 rounded-full flex items-center justify-center mb-6 text-alda-gold">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="text-3xl font-montserrat font-bold text-alda-dark mb-6 tracking-tight uppercase">Our Mission</h3>
                <ul class="space-y-4 text-gray-600 text-lg">
                    <li class="flex items-start">
                        <span class="text-alda-gold mr-3 mt-1">•</span>
                        <span>Deliver exceptional, personalized solutions in study abroad admissions, visa processing, and accommodation consultancy for client success.</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-alda-gold mr-3 mt-1">•</span>
                        <span>Inspire and guide individuals by connecting ambition with achievement through innovative consultancy services.</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-alda-gold mr-3 mt-1">•</span>
                        <span>Uphold a legacy of trust, integrity, and excellence, ensuring every journey with ALDA TRAVELED LIMITED is unforgettable.</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- About Details -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto flex flex-col md:flex-row items-center gap-16">
            <div class="md:w-1/2">
                <h2 class="text-3xl font-montserrat font-bold text-alda-dark mb-8">ALDA TRAVELED LIMITED</h2>
                <div class="space-y-6 text-gray-600 text-lg leading-relaxed text-justify">
                    <p>
                        ALDA TRAVELED LIMITED is dedicated to helping individuals expand their horizons through education and travel, focusing on study abroad admissions, travel visa facilitation, and accommodation consultancy.
                    </p>
                    <p>
                        Founded on passion, expertise, and innovation, we serve as a trusted partner for students and travelers, navigating international systems with a commitment to client satisfaction and a forward-thinking approach, establishing itself as an industry leader in consultancy services.
                    </p>
                </div>
            </div>
            <div class="md:w-1/2">
                <div class="relative group">
                    <div class="absolute inset-0 bg-alda-gold rounded-3xl rotate-3 group-hover:rotate-0 transition-transform duration-500"></div>
                    <img src="~/images/aldaschool.jpg" alt="Travel and Education" class="relative rounded-3xl shadow-2xl transition-transform duration-500 group-hover:-translate-y-2 group-hover:-translate-x-2" asp-append-version="true">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Meet the Visionary Section -->
<section class="py-20 bg-alda-light overflow-hidden">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
            <div class="bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row">
                <div class="md:w-2/5 relative min-h-[400px]">
                    <img src="~/images/AldaTraveledCEO.jpg" alt="Damilare L. Alli-Balogun" class="absolute inset-0 w-full h-full object-cover" asp-append-version="true">
                    <div class="absolute inset-0 bg-gradient-to-t from-alda-dark/60 to-transparent"></div>
                    <div class="absolute bottom-8 left-8 text-white">
                        <h3 class="text-alda-gold font-montserrat font-bold">Damilare L. Alli-Balogun</h3>
                        <p class="text-alda-gold font-medium uppercase tracking-widest text-sm">Owner / Director of Operations</p>
                    </div>
                </div>
                <div class="md:w-3/5 p-12 md:p-20 flex flex-col justify-center">
                    <span class="text-alda-gold font-bold uppercase tracking-[0.2em] text-sm mb-4 block">Meet The Visionary</span>
                    <h2 class="text-4xl font-montserrat font-bold text-alda-dark mb-8 tracking-tight">Innovation Through Passion</h2>
                    <div class="space-y-6 text-gray-600 text-lg leading-relaxed text-justify italic">
                        <p>
                            "Damilare L. Alli-Balogun is the driving force behind ALDA TRAVELED LIMITED, founded to connect ambition with opportunity through his passion for education and global exposure. His personal experiences inspire his passion to make travel and education accessible."
                        </p>
                        <p>
                            "Damilare's empathetic and forward-thinking leadership empowers his team to strive for greater achievements, establishing ALDA TRAVELED LIMITED as a trusted partner for those seeking to explore the world and enhance their futures."
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-24 bg-alda-dark text-white relative overflow-hidden">
    <div class="container mx-auto px-4 text-center relative z-10">
        <h2 class="text-4xl md:text-5xl font-montserrat font-bold mb-8">Ready to Start Your Unforgettable Journey?</h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
            At ALDA TRAVELED LIMITED, we go beyond consultancy to be your partners in exploring a world without boundaries.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <a asp-controller="Contact" asp-action="Index" class="btn-primary px-12 py-4 text-lg">Contact Us Today</a>
            <a asp-controller="Scholarships" asp-action="Index" class="btn-secondary px-12 py-4 text-lg">Browse Programs</a>
        </div>
    </div>
    <!-- Decorative background elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-alda-gold opacity-5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-alda-gold opacity-5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
</section>
