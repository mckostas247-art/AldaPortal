@{
    ViewData["Title"] = "Our Services - ALDA TRAVELED LIMITED";
}

<!-- Hero Section -->
<section class="hero-gradient text-white py-20 md:py-32">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl text-gray-300 lg:text-7xl font-montserrat font-bold mb-6 animate-fade-in">
                Our <span class="text-alda-gold">Services</span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-300 mb-8 animate-fade-in delay-100">
                A Global Travel & Educational Consultancy for a world without boundaries.
            </p>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto space-y-12">
            
            <!-- Study Abroad Admissions -->
            <div class="group bg-gray-50 p-8 md:p-12 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-500 border border-gray-100">
                <div class="flex flex-col md:flex-row gap-8 items-start">
                    <div class="flex-shrink-0">
                        <div class="w-16 h-16 bg-alda-gold rounded-2xl flex items-center justify-center transform group-hover:rotate-12 transition-transform duration-500 shadow-lg">
                            <svg class="w-8 h-8 text-alda-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-2xl font-montserrat font-bold text-alda-dark mb-4 group-hover:text-alda-gold transition-colors block">Study Abroad Admissions</h3>
                        <p class="text-gray-600 text-lg leading-relaxed mb-6">
                            We provide customized support for university and college applications, helping you gain admission to your desired institution. Our expert advisors assist with course selection, application preparation, interviews, and visa requirements.
                        </p>
                        <div class="bg-white p-6 rounded-xl border border-alda-gold/20">
                            <h4 class="font-bold text-alda-dark mb-3">Key Offerings:</h4>
                            <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-gray-600">
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Course selection & Application prep</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Interview & Visa requirements</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Global network of partner institutions</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Undergraduate & Postgraduate support</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Visa Application Support -->
            <div class="group bg-gray-50 p-8 md:p-12 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-500 border border-gray-100">
                <div class="flex flex-col md:flex-row gap-8 items-start">
                    <div class="flex-shrink-0">
                        <div class="w-16 h-16 bg-alda-gold rounded-2xl flex items-center justify-center transform group-hover:-rotate-12 transition-transform duration-500 shadow-lg">
                            <svg class="w-8 h-8 text-alda-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-2xl font-montserrat font-bold text-alda-dark mb-4 group-hover:text-alda-gold transition-colors block">Visa Application Support</h3>
                        <p class="text-gray-600 text-lg leading-relaxed mb-6">
                            Navigating visa processes can be challenging, but our experienced consultants simplify each step, from documentation to approvals for various countries. We provide tailored services for studying abroad, business trips, or travel, ensuring a hassle-free experience.
                        </p>
                        <div class="bg-white p-6 rounded-xl border border-alda-gold/20">
                            <h4 class="font-bold text-alda-dark mb-3">What we do:</h4>
                            <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-gray-600">
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Documentation to final approvals</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Support for various countries</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Business trip & tourism visa kits</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Hassle-free application tracking</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Accommodation Advisory -->
            <div class="group bg-gray-50 p-8 md:p-12 rounded-3xl shadow-sm hover:shadow-xl transition-all duration-500 border border-gray-100">
                <div class="flex flex-col md:flex-row gap-8 items-start">
                    <div class="flex-shrink-0">
                        <div class="w-16 h-16 bg-alda-gold rounded-2xl flex items-center justify-center transform group-hover:rotate-12 transition-transform duration-500 shadow-lg">
                            <svg class="w-8 h-8 text-alda-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-2xl font-montserrat font-bold text-alda-dark mb-4 group-hover:text-alda-gold transition-colors block">Accommodation Advisory</h3>
                        <p class="text-gray-600 text-lg leading-relaxed mb-6">
                            We assist you in discovering safe, affordable, and convenient accommodation that aligns with your lifestyle and budget, ranging from student housing to long-term stays. Our support extends to logistics and tenancy matters as well.
                        </p>
                        <div class="bg-white p-6 rounded-xl border border-alda-gold/20">
                            <h4 class="font-bold text-alda-dark mb-3">Our Focus:</h4>
                            <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-gray-600">
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Student housing placement</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Long-term stays and rentals</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Tenancy agreement reviews</li>
                                <li class="flex items-center"><span class="w-2 h-2 bg-alda-gold rounded-full mr-3"></span> Logistics and location advisory</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Services -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Relocation -->
                <div class="bg-white p-8 rounded-3xl shadow-sm hover:shadow-lg transition-all border border-gray-100 flex flex-col h-full">
                    <h3 class="text-xl font-bold text-alda-dark mb-4">Relocation Assistance</h3>
                    <p class="text-gray-600 mb-6 flex-grow">
                        Personalized help with cultural adjustments, language barriers, logistics, and settling into your new environment confidentally.
                    </p>
                    <div class="text-alda-gold flex items-center gap-2 font-semibold">
                        <span>Pre-departure to settling in</span>
                    </div>
                </div>
                <!-- Career -->
                <div class="bg-white p-8 rounded-3xl shadow-sm hover:shadow-lg transition-all border border-gray-100 flex flex-col h-full">
                    <h3 class="text-xl font-bold text-alda-dark mb-4">Career & Academic Guidance</h3>
                    <p class="text-gray-600 mb-6 flex-grow">
                        Expert counseling on career options, course selection, and academic planning to align with your unique passions and goals.
                    </p>
                    <div class="text-alda-gold flex items-center gap-2 font-semibold">
                        <span>Align ambition with achievement</span>
                    </div>
                </div>
                <!-- Travel -->
                <div class="bg-white p-8 rounded-3xl shadow-sm hover:shadow-lg transition-all border border-gray-100 flex flex-col h-full">
                    <h3 class="text-xl font-bold text-alda-dark mb-4">Travel Planning & Support</h3>
                    <p class="text-gray-600 mb-6 flex-grow">
                        Personalized itineraries, handling all logistics like bookings and transportation for education, tourism, or professional trips.
                    </p>
                    <div class="text-alda-gold flex items-center gap-2 font-semibold">
                        <span>Smooth & memorable journeys</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-alda-light text-center">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-montserrat font-bold text-alda-dark mb-6 tracking-tight">Turn your journey into unforgettable memories</h2>
        <p class="text-lg text-gray-600 mb-10 max-w-2xl mx-auto">
            Our experts create personalized travel experiences tailored to your needs. Join us to explore a world without boundaries.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a asp-controller="Contact" asp-action="Index" class="btn-primary px-10 py-4">Speak with an Expert</a>
            <a asp-controller="Scholarships" asp-action="Index" class="btn-secondary px-10 py-4">Explore Programs</a>
        </div>
    </div>
</section>
