@model PortalBase.Core.Entities.Page
@{
    ViewData["Title"] = Model.Title;
    ViewData["SeoDescription"] = Model.SeoDescription;
}

@if (!string.IsNullOrEmpty(Model.HeroImageUrl))
{
    <div class="mb-8">
        <img src="@Model.HeroImageUrl" alt="@Model.Title" class="w-full h-64 md:h-96 object-cover rounded-xl shadow-lg" />
    </div>
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-montserrat font-bold text-alda-dark mb-6">@Model.Title</h1>
        <div class="prose max-w-none text-alda-gray">
            @Html.Raw(Model.ContentHtml)
        </div>
    </div>
</div>
