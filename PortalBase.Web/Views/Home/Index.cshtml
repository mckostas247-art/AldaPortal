@{
    ViewData["Title"] = "ALDA TRAVELED - Global Travel & Educational Consultancy";
}

<!-- Hero Section: High-End Revamp -->
<section id="home" class="hero-gradient min-h-[90vh] flex items-center relative overflow-hidden py-24 md:py-32">
    <!-- Animated background elements -->
    <div class="absolute top-0 left-0 w-full h-full pointer-events-none overflow-hidden">
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-alda-gold/10 rounded-full blur-[100px] animate-pulse"></div>
        <div class="absolute top-1/2 -left-24 w-64 h-64 bg-blue-500/10 rounded-full blur-[80px]"></div>
    </div>

    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <img src="https://images.unsplash.com/photo-1523050335392-9bef867a0578?auto=format&fit=crop&w=1920&q=80" 
             alt="Global Education" 
             class="w-full h-full object-cover opacity-20 scale-105 animate-float">
        <div class="absolute inset-0 bg-gradient-to-b from-alda-dark/80 via-alda-dark/60 to-alda-dark"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-5xl mx-auto text-center">
            <!-- Brand Icon -->
            <div class="w-24 h-24 bg-alda-gold mx-auto mb-10 rounded-3xl flex items-center justify-center shadow-2xl animate-float group">
                 <svg viewBox="0 0 100 100" class="w-16 h-16 fill-alda-dark group-hover:scale-110 transition-transform">
                    <path d="M50 15 L85 85 L65 85 L50 55 L35 85 L15 85 Z" />
                </svg>
            </div>

            <!-- Breadcrumb-style motto -->
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full glass-card mb-8 animate-fade-in">
                <span class="w-2 h-2 bg-alda-gold rounded-full animate-ping"></span>
                <span class="text-xs md:text-sm font-bold tracking-[0.2em] uppercase text-gray-200">A Global Travel & Educational Consultancy</span>
            </div>

            <h1 class="text-5xl md:text-7xl lg:text-8xl font-montserrat font-extrabold mb-8 animate-fade-in delay-100 leading-[1.1]">
                <span class="text-white block opacity-90 mb-2">Discover Your Path to</span>
                <span class="gold-gradient-text text-glow italic">Global Education</span>
            </h1>

            <p class="text-xl md:text-2xl text-gray-300 mb-10 animate-fade-in delay-200 font-light tracking-wide">
                Charting New Horizons, <span class="text-white font-medium">Empowering Your Journey</span>
            </p>

            <div class="max-w-2xl mx-auto bg-white/5 backdrop-blur-sm border border-white/10 p-6 rounded-2xl mb-12 animate-fade-in delay-300">
                <p class="text-lg text-gray-400 leading-relaxed">
                    Explore international scholarship opportunities and comprehensive educational travel services designed to make your academic dreams a reality.
                </p>
            </div>

            <div class="flex flex-col sm:flex-row gap-6 justify-center animate-fade-in delay-400">
                <a asp-controller="Scholarships" asp-action="Index" class="btn-primary px-12 py-5 text-xl shadow-[0_0_30px_rgba(255,215,0,0.3)] hover:shadow-gold transition-all">
                    Browse Scholarships
                </a>
                <a asp-controller="Contact" asp-action="Index" class="btn-secondary px-12 py-5 text-xl bg-white/5 backdrop-blur-md">
                    Get Started Now
                </a>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-float">
        <div class="w-6 h-10 border-2 border-white/30 rounded-full flex justify-center p-1">
            <div class="w-1 h-2 bg-alda-gold rounded-full animate-bounce"></div>
        </div>
    </div>
</section>

<!-- Our CORE Section -->
