<!-- Official Services Highlight -->
<section id="services" class="py-24 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="text-center mb-20">
            <h2 class="text-3xl md:text-5xl font-montserrat font-bold text-alda-dark mb-6">Our Core Services</h2>
            <div class="w-24 h-1 bg-alda-gold mx-auto mb-8"></div>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Comprehensive travel and educational consultancy tailored to your success.
            </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Study Abroad -->
            <div class="bg-white p-10 rounded-3xl shadow-sm hover:shadow-xl transition-all group border border-gray-100 h-full flex flex-col">
                <div class="w-14 h-14 bg-alda-dark text-alda-gold rounded-2xl flex items-center justify-center mb-6 transform group-hover:-translate-y-2 transition-transform shadow-lg">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-alda-dark mb-4">Study Abroad Admissions</h3>
                <p class="text-gray-600 mb-8 flex-grow">Customized support for university and college applications to help you gain admission to your desired institution.</p>
                <div class="mt-auto">
                    <a asp-controller="Services" asp-action="Index" class="text-alda-gold font-bold hover:underline">Learn more &rarr;</a>
                </div>
            </div>
            <!-- Visa -->
            <div class="bg-white p-10 rounded-3xl shadow-sm hover:shadow-xl transition-all group border border-gray-100 h-full flex flex-col">
                <div class="w-14 h-14 bg-alda-dark text-alda-gold rounded-2xl flex items-center justify-center mb-6 transform group-hover:-translate-y-2 transition-transform shadow-lg">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-alda-dark mb-4">Visa Application Support</h3>
                <p class="text-gray-600 mb-8 flex-grow">Simplifying documentation and processing for studying abroad, business, or tourism visa applications.</p>
                <div class="mt-auto">
                    <a asp-controller="Services" asp-action="Index" class="text-alda-gold font-bold hover:underline">Learn more &rarr;</a>
                </div>
            </div>
            <!-- Relocation -->
            <div class="bg-white p-10 rounded-3xl shadow-sm hover:shadow-xl transition-all group border border-gray-100 h-full flex flex-col">
                <div class="w-14 h-14 bg-alda-dark text-alda-gold rounded-2xl flex items-center justify-center mb-6 transform group-hover:-translate-y-2 transition-transform shadow-lg">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <h3 class="text-2xl font-bold text-alda-dark mb-4">Relocation Assistance</h3>
                <p class="text-gray-600 mb-8 flex-grow">From pre-departure to settling in, we provide help with cultural adjustments and logistical support in your new country.</p>
                <div class="mt-auto">
                    <a asp-controller="Services" asp-action="Index" class="text-alda-gold font-bold hover:underline">Learn more &rarr;</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Scholarships Section -->
<section id="scholarships" class="py-24 bg-white">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
            <div class="md:w-2/3">
                <span class="text-alda-gold font-bold uppercase tracking-widest mb-4 block">Funding Your Future</span>
                <h2 class="text-3xl md:text-5xl font-montserrat font-bold text-alda-dark leading-tight">Featured Scholarships</h2>
            </div>
            <a asp-controller="Scholarships" asp-action="Index" class="btn-secondary whitespace-nowrap">View All Scholarships</a>
        </div>
        
        @if (ViewBag.FeaturedScholarships != null && ((List<PortalBase.Core.Entities.Scholarship>)ViewBag.FeaturedScholarships).Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var scholarship in (List<PortalBase.Core.Entities.Scholarship>)ViewBag.FeaturedScholarships)
                {
                    <div class="group bg-white rounded-3xl border border-gray-100 shadow-sm hover:shadow-2xl transition-all duration-500 overflow-hidden flex flex-col h-full">
                        <div class="p-8 flex-grow">
                            <div class="flex justify-between items-center mb-6">
                                <span class="px-4 py-1.5 bg-alda-gold/10 text-alda-gold text-xs font-bold rounded-full uppercase tracking-tighter">@scholarship.Country</span>
                                <span class="text-xs font-bold text-gray-400 uppercase">@scholarship.DegreeLevel</span>
                                @if (scholarship.IsFeatured)
                                {
                                    <span class="px-2 py-0.5 bg-alda-gold text-alda-dark text-[10px] font-black rounded ml-1 animate-pulse">FEATURED</span>
                                }
                            </div>
                            <h3 class="text-2xl font-montserrat font-bold text-alda-dark mb-4 group-hover:text-alda-gold transition-colors line-clamp-2 italic">
                                @scholarship.Title
                            </h3>
                            <p class="text-gray-500 mb-6 line-clamp-3 leading-relaxed">@scholarship.Description</p>
                            <div class="flex justify-between items-end border-t border-gray-50 pt-6 mt-6">
                                <div>
                                    <div class="text-sm text-gray-400 uppercase tracking-widest font-bold mb-1">Value</div>
                                    <div class="text-2xl font-bold text-alda-dark">@scholarship.Amount.ToString("C0")</div>
                                </div>
                                <div class="text-right">
                                    <div class="text-sm text-gray-400 uppercase tracking-widest font-bold mb-1">Deadline</div>
                                    <div class="text-alda-dark font-bold">@scholarship.Deadline.ToString("MMM dd")</div>
                                </div>
                            </div>
                        </div>
                        <a asp-controller="Scholarships" asp-action="Details" asp-route-id="@scholarship.Id" class="bg-alda-dark text-white py-4 text-center group-hover:bg-alda-gold group-hover:text-alda-dark transition-all font-bold">
                            View Full Scholarship Details
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</section>

