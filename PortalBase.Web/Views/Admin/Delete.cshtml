@model PortalBase.Core.Entities.Page
@{
    ViewData["Title"] = "Delete Page";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-montserrat font-bold text-alda-dark mb-6">Delete Page</h1>

    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <p class="text-red-800 font-semibold">Are you sure you want to delete this page?</p>
    </div>

    <div class="card mb-6">
        <dl class="grid grid-cols-1 gap-4">
            <div>
                <dt class="text-sm font-medium text-alda-gray">Title</dt>
                <dd class="mt-1 text-sm text-alda-dark font-medium">@Model.Title</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-alda-gray">Slug</dt>
                <dd class="mt-1 text-sm text-alda-dark">@Model.Slug</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-alda-gray">Published</dt>
                <dd class="mt-1 text-sm text-alda-dark">@(Model.IsPublished ? "Yes" : "No")</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="flex space-x-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 font-semibold">Delete</button>
        <a asp-action="Index" class="btn-secondary">Cancel</a>
    </form>
</div>
