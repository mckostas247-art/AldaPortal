@model PortalBase.Core.Entities.Scholarship
@{
    ViewData["Title"] = "Delete Scholarship";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-montserrat font-bold text-alda-dark mb-6">Delete Scholarship</h1>

    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
        <p class="text-red-800 font-semibold">Are you sure you want to delete this scholarship?</p>
    </div>

    <div class="card mb-6">
        <dl class="grid grid-cols-1 gap-4">
            <div>
                <dt class="text-sm font-medium text-alda-gray">Title</dt>
                <dd class="mt-1 text-sm text-alda-dark font-medium">@Model.Title</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-alda-gray">Country</dt>
                <dd class="mt-1 text-sm text-alda-dark">@Model.Country</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-alda-gray">Field of Study</dt>
                <dd class="mt-1 text-sm text-alda-dark">@Model.FieldOfStudy</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-alda-gray">Amount</dt>
                <dd class="mt-1 text-sm text-alda-dark">@Model.Amount.ToString("C0") @Model.Currency</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-alda-gray">Deadline</dt>
                <dd class="mt-1 text-sm text-alda-dark">@Model.Deadline.ToString("MMMM dd, yyyy")</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-alda-gray">Active</dt>
                <dd class="mt-1 text-sm text-alda-dark">@(Model.IsActive ? "Yes" : "No")</dd>
            </div>
        </dl>
    </div>

    <form asp-action="DeleteScholarship" method="post" class="flex space-x-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 font-semibold">Delete</button>
        <a asp-action="Scholarships" class="btn-secondary">Cancel</a>
    </form>
</div>



