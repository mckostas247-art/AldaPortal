@model IEnumerable<PortalBase.Core.Entities.Scholarship>
@{
    ViewData["Title"] = "Admin - Scholarships";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-montserrat font-bold text-alda-dark">Scholarships Management</h1>
        <div class="space-x-2">
            <a asp-action="Index" class="btn-secondary">Back to Pages</a>
            <a asp-action="CreateScholarship" class="btn-primary">
                Create New Scholarship
            </a>
        </div>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Title</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Country</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Field</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Deadline</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm font-medium text-alda-dark">@item.Title</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-alda-gray">@item.Country</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-alda-gray">@item.FieldOfStudy</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-alda-dark">@item.Amount.ToString("C0") @item.Currency</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-alda-gray">@item.Deadline.ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm space-x-1">
                                @if (item.IsActive)
                                {
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Inactive</span>
                                }
                                @if (item.IsFeatured)
                                {
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Featured</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <a asp-action="EditScholarship" asp-route-id="@item.Id" class="text-alda-gold hover:text-yellow-600">Edit</a>
                                <a asp-action="DeleteScholarship" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



