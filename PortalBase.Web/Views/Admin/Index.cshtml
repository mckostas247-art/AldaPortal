@model IEnumerable<PortalBase.Core.Entities.Page>
@{
    ViewData["Title"] = "Admin - Pages";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-montserrat font-bold text-alda-dark">Pages Management</h1>
        <div class="space-x-2">
            <a asp-action="Scholarships" class="btn-secondary">Manage Scholarships</a>
            <a asp-action="Inquiries" class="btn-secondary">Contact Inquiries</a>
            <a asp-action="Settings" class="btn-secondary">Settings</a>
            <a asp-action="Create" class="btn-primary">
                Create New Page
            </a>
        </div>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Title</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Slug</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Published</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Last Updated</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-alda-dark uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-alda-dark">@item.Title</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-alda-gray">@item.Slug</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm">
                                @if (item.IsPublished)
                                {
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Published</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Draft</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-alda-gray">@item.LastUpdated.ToString("g")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-alda-gold hover:text-yellow-600">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-800">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
