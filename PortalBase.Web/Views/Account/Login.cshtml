@model PortalBase.Web.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="flex min-h-screen flex-col justify-center py-12 sm:px-6 lg:px-8 bg-alda-light">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-montserrat font-bold tracking-tight text-alda-dark">Sign in to your account</h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="card">
            <form asp-action="Login" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
                
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-alda-dark mb-2"></label>
                    <input asp-for="Email" type="email" autocomplete="email" required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-alda-gold focus:border-transparent" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-alda-dark mb-2"></label>
                    <input asp-for="Password" type="password" autocomplete="current-password" required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-alda-gold focus:border-transparent" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                </div>

                <div class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox" 
                           class="h-4 w-4 rounded border-gray-300 text-alda-gold focus:ring-alda-gold" />
                    <label asp-for="RememberMe" class="ml-2 block text-sm text-alda-dark">Remember me</label>
                </div>

                <div>
                    <button type="submit" class="btn-primary w-full">
                        Sign in
                    </button>
                </div>

                <div class="text-center">
                    <p class="text-sm text-alda-gray">
                        Don't have an account?
                        <a asp-action="Register" class="font-medium text-alda-gold hover:text-yellow-600">Register here</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
