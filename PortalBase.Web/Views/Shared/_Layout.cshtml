<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AldaTraveled</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    @if (ViewData["SeoDescription"] != null)
    {
        <meta name="description" content="@ViewData["SeoDescription"]" />
    }
</head>
<body class="min-h-screen bg-alda-light">
    <!-- Rest of header ... -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <header class="bg-white shadow-lg sticky top-0 z-50">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <a class="flex items-center gap-3 group" asp-controller="Home" asp-action="Index">
                    <div class="w-10 h-10 bg-alda-dark rounded-xl flex items-center justify-center transform group-hover:rotate-12 transition-transform duration-300 shadow-md">
                        <svg viewBox="0 0 100 100" class="w-7 h-7 fill-alda-gold">
                            <path d="M50 5 L10 90 L30 90 L38 70 L62 70 L70 90 L90 90 Z M50 25 L58 50 L42 50 Z" class="opacity-30" />
                            <!-- Plane silhouette styling for the 'A' -->
                            <path d="M50 15 L85 85 L65 85 L50 55 L35 85 L15 85 Z" />
                            <circle cx="50" cy="45" r="5" class="fill-white/20" />
                        </svg>
                    </div>
                    <div class="flex flex-col">
                        <span class="text-xl font-montserrat font-extrabold text-alda-dark tracking-tighter leading-none">ALDA <span class="text-alda-gold">TRAVELED</span></span>
                        <span class="text-[10px] uppercase tracking-[0.2em] text-gray-400 font-bold leading-none mt-1">Limited</span>
                    </div>
                </a>
                <div class="hidden md:flex items-center space-x-8">
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="About" asp-action="Index">About Us</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="Services" asp-action="Index">Services</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="Scholarships" asp-action="Index">Scholarships</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="Contact" asp-action="Index">Contact</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="Staff" asp-action="Dashboard">Staff Portal</a>
                            <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="Admin" asp-action="Index">Admin</a>
                        }
                        <partial name="_LoginPartial" />
                    }
                    else
                    {
                        <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" class="text-alda-dark hover:text-alda-gold" id="mobile-menu-button">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
            <!-- Mobile Navigation -->
            <div id="mobile-menu" class="hidden md:hidden pb-4">
                <div class="flex flex-col space-y-2">
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="About" asp-action="Index">About Us</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="Services" asp-action="Index">Services</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="Scholarships" asp-action="Index">Scholarships</a>
                    <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="Contact" asp-action="Index">Contact</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="Staff" asp-action="Dashboard">Staff Portal</a>
                            <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="Admin" asp-action="Index">Admin</a>
                        }
                        <partial name="_LoginPartial" />
                    }
                    else
                    {
                        <a class="text-alda-dark hover:text-alda-gold transition-colors font-medium py-2" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <main>
        @RenderBody()
    </main>

