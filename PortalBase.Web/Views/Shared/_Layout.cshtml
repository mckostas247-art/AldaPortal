                        {
                            <li><a asp-controller="Staff" asp-action="Dashboard" class="text-gray-300 hover:text-alda-gold transition-colors">Staff Portal</a></li>
                        }
                    </ul>
                </div>
                <div>
                    <h4 class="font-montserrat font-semibold mb-4">Contact Info</h4>
                    <ul class="space-y-3 text-gray-300">
